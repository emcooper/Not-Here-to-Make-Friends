
<div class="row">
  <div class="col-md-3">

  </div>
<div class="col col-md-6">
  <br><h1 class="text-center">Sign Up!</h1><br>

<%= form_for @user do |f| %>
<div class="form-group row">
  <%= f.label :name, class: "col-md-4 col-form-label" %>
  <%= f.text_field :name, class: "form-control col-md-6" %>
</div>
<div class="form-group row">
  <%= f.label :email, class: "col-md-4 col-form-label" %>
  <%= f.text_field :email, class: "form-control col-md-6" %>
</div>
<div class="form-group row">
  <%= f.label :password, class: "col-md-4 col-form-label" %>
  <%= f.password_field :password, class: "form-control col-md-6" %>
</div>
<div class="form-group row">
  <%= f.label :password_confirmation, class: "col-md-4 col-form-label" %>
  <%= f.password_field :password_confirmation, class: "form-control col-md-6" %>
</div>
<div class="text-center">

  <%= f.submit "Sign Up!", class: "btn btn-primary" %>
</div>

<% end %>
</div>
<div class="col-md-3">

</div>
</div>
