<%= tag :div, class: "contestant_information", data: {id: @contestant.id, name: @contestant.name} %>

<div class="row">
<div class="col-md-6">

<img class = "img-responsive contestant-profile-img" src="<%= @contestant.headshot %> " alt="contestant headshot">
</div>

<div class="col-md-6">
<h1 class = "cont-name"><%= @contestant.name %></h1>
<div class="contestant-info">


<p><i class="fa fa-heartbeat" aria-hidden="true"></i>  Age: <%= @contestant.age %></p>
<p><i class="fa fa-map-marker" aria-hidden="true"></i>   Hometown: <%= @contestant.hometown %></p>
<p><i class="fa fa-briefcase" aria-hidden="true"></i> Occupation: <%= @contestant.occupation %></p>
</div>
</div>
</div>
<br>

<nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="#stats">Stats</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#personality-profile">Personality Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#social-media">Social Media</a>
      </li>
    </ul>
  </div>
</nav>


<div data-spy="scroll" data-offset="0">
  <h4 id="stats">Stats</h4>
    <div id="container"></div>
    <div class="row text-center stats-small-cards">

      <div class = "col-md-3">
        <div class="card stats-card">
          <div class="card-body">
            <h4 class="card-title">Ranking</h4>
             <%= @contestant.ranking %> Place
           </div>
         </div>
       </div>

       <div class = "col-md-3">
         <div class="card stats-card">
           <div class="card-body">
             <h4 class="card-title">Points this Week</h4>
              <%= @contestant.weekly_points(current_week) %>
            </div>
          </div>
        </div>

        <div class = "col-md-3">
          <div class="card stats-card">
            <div class="card-body">
              <h4 class="card-title">Points this Season</h4>
               <%= @contestant.season_points %>
             </div>
           </div>
         </div>

         <div class = "col-md-3">
           <div class="card stats-card">
             <div class="card-body">
               <h4 class="card-title">Highest Scoring Play of the Season</h4>
                <%= @contestant.biggest_play.description %> for <%= @contestant.biggest_play.point_value %> Points
              </div>
            </div>
          </div>

    </div>

  <h4 id="personality-profile">Personality</h4>
  <p>...
  </p>
  <h4 id="social-media">Social Media</h4>
  <p>...</p>
</div>
